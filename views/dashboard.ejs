<!DOCTYPE html>
<html>
<head>
    <title>Database Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="container-fluid">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/dashboard">PostgreSQL Admin</a>
            <div class="d-flex">
                <span class="text-light me-3">
                    Connected to: <%= connectionInfo %>
                </span>
                <form action="/disconnect" method="post">
                    <button type="submit" class="btn btn-outline-light">Disconnect</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="row">
        <!-- Left Sidebar -->
        <div class="col-md-3">
            <div class="card shadow mb-4">
                <div class="card-header bg-secondary text-white">
                    <i class="bi bi-table"></i> Tables
                </div>
                <div class="card-body">
                    <% if (tables.length > 0) { %>
                        <div class="list-group">
                            <% tables.forEach(table => { %>
                                <a href="/export/<%= table.table_name %>/csv" 
                                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <%= table.table_name %>
                                    <span class="badge bg-primary rounded-pill">
                                        <i class="bi bi-download"></i>
                                    </span>
                                </a>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <div class="alert alert-info">No tables found</div>
                    <% } %>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <i class="bi bi-clock-history"></i> Query History
                </div>
                <div class="card-body">
                    <% if (history.length > 0) { %>
                        <div class="list-group">
                            <% history.forEach(query => { %>
                                <div class="list-group-item">
                                    <small class="text-muted">
                                        <%= moment(query.timestamp).format('YYYY-MM-DD HH:mm') %>
                                    </small>
                                    <code class="d-block mt-1"><%= query.query %></code>
                                    <span class="badge bg-info"><%= query.rows %> rows</span>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <div class="alert alert-info">No query history</div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-terminal"></i> SQL Query
                </div>
                <div class="card-body">
                    <% if (error) { %>
                        <div class="alert alert-danger"><%= error %></div>
                    <% } %>

                    <form action="/query" method="post">
                        <div class="mb-3">
                            <textarea name="query" 
                                      class="form-control font-monospace" 
                                      rows="5"
                                      placeholder="SELECT * FROM ..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-play-circle"></i> Execute
                        </button>
                    </form>
                </div>
            </div>

            <!-- Backup/Restore Section -->
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card shadow">
                        <div class="card-header bg-warning">
                            <i class="bi bi-database-add"></i> Backup
                        </div>
                        <div class="card-body">
                            <form action="/backup" method="post">
                                <button type="submit" class="btn btn-warning">
                                    <i class="bi bi-file-earmark-zip"></i> Create Backup
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card shadow">
                        <div class="card-header bg-info text-white">
                            <i class="bi bi-database-check"></i> Restore
                        </div>
                        <div class="card-body">
                            <form action="/restore" method="post" enctype="multipart/form-data">
                                <div class="input-group">
                                    <input type="file" class="form-control" name="backup" required>
                                    <button type="submit" class="btn btn-info">
                                        <i class="bi bi-upload"></i> Restore
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
