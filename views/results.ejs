<!DOCTYPE html>
<html>
<head>
    <title>Query Results</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h2 class="h5 mb-0">Query Results</h2>
        </div>
        <div class="card-body">
            <div class="mb-4">
                <code class="bg-light p-2 d-block"><%= query %></code>
                <div class="mt-2">
                    <span class="badge bg-primary">Rows affected: <%= rowCount %></span>
                    <a href="/dashboard" class="btn btn-sm btn-outline-secondary ms-2">
                        <i class="bi bi-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            </div>

            <% if (results.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <% Object.keys(results[0]).forEach(header => { %>
                                    <th><%= header %></th>
                                <% }); %>
                            </tr>
                        </thead>
                        <tbody>
                            <% results.forEach(row => { %>
                                <tr>
                                    <% Object.values(row).forEach(value => { %>
                                        <td><%= value %></td>
                                    <% }); %>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-info">No results returned</div>
            <% } %>
        </div>
    </div>
</body>
</html>
